<view>
    <wxc-tab
    bind:tabchange="onClick"
    default-index="{{0}}"
    active-text-color="#108ee9"
    active-line-color="#108ee9"
    component-id="c2"
    animate="{{true}}"
  >
    <wxc-tab-panel
      wx:for="{{tabs}}"
      wx:for-item="tab"
      wx:key="{{tab.status}}"
      tab-index="{{index}}"
      component-id="c2"
      label="{{tab.status}}"
    >
    <view wx:if="{{tab.list.length > 0}}">
      <view wx:for="{{tab.list}}"
      wx:for-item="order"
      wx:key="{{order.orderNo}}">
      {{order.orderNo}}
      </view>
    </view>
    <view wx:else>
    <wxc-abnor type="ORDER"></wxc-abnor>
    </view>
    </wxc-tab-panel>
  </wxc-tab>
</view>