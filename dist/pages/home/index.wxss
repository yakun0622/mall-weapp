.slider {
  height:481rpx;
}
.slide-image {
  width: 100%;
  height: 480rpx;
}
.shortcuts-container {
  background-color: white;
  height: 200rpx;
}

.shortcuts-wrap {
  display: block;
  /* padding: 10rpx; */
  background: white;
  margin-top: 8rpx;
}

.shortcuts-item {
  min-width: 25%;
  min-height: 100rpx;
  font-size: 22rpx;
  text-align: center;
}

.shortcuts-item:nth-of-type(odd) {
  line-height: 30rpx;
  background: #afdde3;
}

.shortcuts-item:nth-of-type(2n) {
  line-height: 50rpx;
  background: #f397b2;
}

.goods-list-wrap {
  display: block;
  padding: 2%;
  /* background: #696969; */
}
.goods-box{
  width: 49%;
  height: 510rpx;
  background-color: #fff;
  overflow: hidden;
  margin: 0.5%;
  flex-grow: 0;
}
.goods-box .store-name{
  margin-left:24rpx;
}
.goods-box .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 339rpx;
   height: 339rpx;
}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}