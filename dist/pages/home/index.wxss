.slider {
  height: 481rpx;
}

.slide-image {
  width: 100%;
  height: 480rpx;
}

.shortcuts-container {
  background-color: white;
  height: 200rpx;
}

.shortcuts-wrap {
  display: block;
  /* padding: 10rpx; */
  background: white;
  margin-top: 8rpx;
}

.shortcuts-item {
  text-align: center; 
  width: 25%;
  height: 120rpx;
}

.shortcuts-item wxc-avatar {
    display: inline-block;
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    background: #0061b2;
    color: #FFF;
    margin-top: 8rpx;
    margin-bottom: 12rpx;
  }

.shortcuts-item image {
  width: 48rpx;
  height: 48rpx;
}
.shortcuts-text {
  font-size: 10px;
  text-align: center;
  margin-top: -10rpx;
}

.goods-list-wrap {
  display: block;
  padding: 2%;
}

.goods-box {
  width: 49%;
  height: 510rpx;
  background-color: #fff;
  overflow: hidden;
  margin: 0.5%;
  flex-grow: 0;
}

.goods-box .store-name {
  margin-left: 24rpx;
}

.goods-box .img-box {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}

.goods-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}

.goods-box .goods-title {
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color: #000;
  margin-left: 24rpx;
}

.goods-box .goods-price {
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color: #e64340;
  margin-left: 24rpx;
}
